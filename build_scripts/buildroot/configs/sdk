# Buildroot configuration used to build the SDK with external toolchain.
# This config is also used as the baseline for the target variants.

# Arch and Toolchain

BR2_CCACHE=y
BR2_OPTIMIZE_3=y
BR2_mipsel=y
BR2_ARCH_HAS_TOOLCHAIN_BUILDROOT=y
BR2_ARCH_NEEDS_GCC_AT_LEAST_4_8=y
BR2_ARCH_NEEDS_GCC_AT_LEAST_4_9=y
BR2_ARCH_NEEDS_GCC_AT_LEAST_5=y
BR2_ARCH="mipsel"
BR2_NORMALIZED_ARCH="mips"
BR2_ENDIAN="LITTLE"
BR2_GCC_TARGET_ARCH="mips32r2"
BR2_GCC_TARGET_ABI="32"
BR2_GCC_TARGET_NAN="legacy"
BR2_GCC_TARGET_FP32_MODE="xx"
BR2_BINFMT_SUPPORTS_SHARED=y
BR2_READELF_ARCH_NAME="MIPS R3000"
BR2_MIPS_CPU_MIPS32R2=y
BR2_mips_xburst=y
BR2_MIPS_FP32_MODE_XX=y
BR2_MIPS_NAN_LEGACY=y
BR2_MIPS_OABI32=y

BR2_TOOLCHAIN_BUILDROOT_CXX=y
BR2_PACKAGE_GLIBC_KERNEL_COMPAT=y
BR2_KERNEL_HEADERS_4_19=y

# SDK Specific Options
BR2_INIT_NONE=y
BR2_SYSTEM_BIN_SH_NONE=y

# Target Python
BR2_PACKAGE_PYTHON3=y
BR2_PACKAGE_PYTHON3_CURSES=y
BR2_PACKAGE_PYTHON3_DECIMAL=y
BR2_PACKAGE_PYTHON3_PYEXPAT=y
BR2_PACKAGE_PYTHON3_READLINE=y
BR2_PACKAGE_PYTHON3_SQLITE=y
BR2_PACKAGE_PYTHON3_SSL=y
BR2_PACKAGE_PYTHON3_XZ=y
BR2_PACKAGE_PYTHON3_ZLIB=y

# Host Python
BR2_PACKAGE_HOST_PYTHON3=y
BR2_PACKAGE_HOST_PYTHON3_SSL=y

# Curl
BR2_PACKAGE_LIBCURL=y
# BR2_PACKAGE_LIBCURL_COOKIES_SUPPORT is not set
# BR2_PACKAGE_LIBCURL_EXTRA_PROTOCOLS_FEATURES is not set

# Crypto Libs
BR2_PACKAGE_LIBOPENSSL=y
BR2_PACKAGE_LIBSODIUM=y

# Camera Libs
BR2_PACKAGE_LIBV4L=y
